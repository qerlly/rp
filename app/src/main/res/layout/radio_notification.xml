<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:weightSum="1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ikona_anty" />

    <LinearLayout
        android:id="@+id/notification_click"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:text="Title"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/track_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:text="Author"
            android:textSize="11sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/notification_button"
        android:layout_weight="0.2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@null"
        android:visibility="gone"
        android:contentDescription="@null"
        android:src="@drawable/ic_play_small"
        app:tint="@color/main_black" />

    <ProgressBar
        android:id="@+id/notification_progress"
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="32dp"/>

</LinearLayout>
